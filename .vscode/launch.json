    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Launch Throb Academy",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ThropAcademy.Web/bin/Debug/net9.0/ThropAcademy.Web.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ThropAcademy.Web",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s"
            }
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:7219",
            "webRoot": "${workspaceFolder}"
        }

    ]
}