@{
    ViewBag.Title = "نتيجة التفريغ الصوتي";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: 'Cairo', sans-serif;
            background-color: #f9fbff;
            margin: 40px auto;
            max-width: 900px;
            color: #2c3e50;
            line-height: 1.7;
            padding: 0 25px;
        }

        h2, h3 {
            text-align: center;
            color: #34495e;
            margin-bottom: 25px;
            font-weight: 700;
        }

        form {
            display: flex;
            justify-content: center;
            gap: 20px;
            flex-wrap: wrap;
            margin-bottom: 40px;
        }

        .btn {
            padding: 14px 28px;
            background-color: #1e90ff;
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            cursor: pointer;
            transition: background-color 0.25s ease;
            font-weight: 700;
            box-shadow: 0 4px 8px rgb(30 144 255 / 0.3);
        }

            .btn:hover {
                background-color: #1565c0;
            }

        .questions-container {
            background-color: #fff;
            padding: 30px 35px;
            border-radius: 18px;
            box-shadow: 0 8px 18px rgb(0 0 0 / 0.1);
            border: 1px solid #dce3eb;
        }

        .question-block {
            background: #f4f7fc;
            border: 1.5px solid #c5d2e1;
            border-radius: 14px;
            padding: 20px 25px;
            margin-bottom: 25px;
            transition: box-shadow 0.3s ease;
        }

            .question-block:hover {
                box-shadow: 0 6px 18px rgba(30, 144, 255, 0.15);
            }

            .question-block strong {
                color: #0d47a1;
                font-size: 1.2rem;
                display: block;
                margin-bottom: 16px;
                border-bottom: 1.5px solid #ccc;
                padding-bottom: 10px;
            }

        .answer-line {
            display: block;
            margin: 8px 0;
            padding: 10px 14px;
            background-color: #f2f6fc;
            border-radius: 10px;
            border: 1px solid #cdd8e5;
            font-size: 1rem;
            font-weight: 500;
            color: #1a237e;
            transition: all 0.3s ease;
        }

        .correct-answer {
            background-color: #e6ffed;
            border-color: #66bb6a;
            color: #1b5e20;
            font-weight: 700;
            box-shadow: 0 0 5px rgba(76, 175, 80, 0.2);
        }

        .no-text {
            text-align: center;
            color: #999;
            font-style: italic;
            margin-top: 70px;
            font-size: 1.15rem;
        }

        .alert {
            background-color: #fce4e4;
            color: #b00020;
            padding: 18px 20px;
            border-radius: 14px;
            margin-bottom: 28px;
            border: 1.5px solid #f44336;
            text-align: center;
            font-weight: 700;
            font-size: 1.1rem;
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body>

    <h2>🎯 اختر نوع الأسئلة المراد توليدها</h2>

    @if (!string.IsNullOrWhiteSpace(ViewBag.Transcription?.ToString()))
    {
        <form method="post" asp-action="GenerateQuestions" asp-controller="Transcription">
            <input type="hidden" name="text" value="@ViewBag.Transcription" />
            <button type="submit" name="type" value="mcq" class="btn">📝 توليد أسئلة اختيار من متعدد</button>
            <button type="submit" name="type" value="truefalse" class="btn">✅ توليد أسئلة صح أو خطأ</button>
        </form>
    }
    else
    {
        <p class="no-text">لم يتم العثور على نص مفرغ.</p>
    }

    @if (!string.IsNullOrWhiteSpace(ViewBag.Questions?.ToString()))
    {
        if (ViewBag.Questions.ToString().Trim().ToLower().StartsWith("فشل") || ViewBag.Questions.ToString().Contains("خطأ"))
        {
            <div class="alert">
                ⚠️ @ViewBag.Questions
            </div>
        }
        else
        {
            <div class="questions-container">
                <h3>📘 الأسئلة المولدة:</h3>

                @{
                    var questionsLines = ViewBag.Questions.ToString().Split('\n');
                    string currentQuestion = null;
                    List<string> answers = new List<string>();
                    bool insideQuestion = false;

                    foreach (var line in questionsLines)
                    {
                        var trimmed = line.Trim();

                        if (trimmed.StartsWith("1.") || trimmed.StartsWith("2.") || trimmed.StartsWith("3.") || trimmed.StartsWith("4.") || trimmed.StartsWith("5."))
                        {
                            if (insideQuestion)
                            {
                                <div class="question-block">
                                    <strong>@currentQuestion</strong>
                                    @foreach (var ans in answers)
                                    {
                                        bool isCorrect = ans.ToLower().Contains("الإجابة الصحيحة") || ans.ToLower().Contains("correct answer");
                                        <div class="answer-line @(isCorrect ? "correct-answer" : "")">@ans</div>
                                    }
                                </div>
                                answers.Clear();
                            }

                            currentQuestion = trimmed;
                            insideQuestion = true;
                        }
                        else if (insideQuestion)
                        {
                            if (!string.IsNullOrWhiteSpace(trimmed))
                            {
                                answers.Add(trimmed);
                            }
                        }
                    }

                    if (insideQuestion && currentQuestion != null)
                    {
                        <div class="question-block">
                            <strong>@currentQuestion</strong>
                            @foreach (var ans in answers)
                            {
                                bool isCorrect = ans.ToLower().Contains("الإجابة الصحيحة") || ans.ToLower().Contains("correct answer");
                                <div class="answer-line @(isCorrect ? "correct-answer" : "")">@ans</div>
                            }
                        </div>
                    }
                }
            </div>
        }
    }

</body>
</html>
