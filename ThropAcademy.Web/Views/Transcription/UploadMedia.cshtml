@{
    ViewBag.Title = "تسجيل أو رفع محاضرة";
    Layout = null; // نُبقي على Layout = null كما هو
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>منصة Throb Academy - تسجيل أو رفع محاضرة</title>
    
    @* 🟢 ربط ملف CSS الخارجي *@
    <link rel="stylesheet" href="~/css/upload-media-style.css" asp-append-version="true" />
    
    @* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
    <link rel="icon" href="https://cdn-icons-png.flaticon.com/512/3135/3135768.png" type="image/png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <div class="logo">
            <span class="platform-icon">📚</span>
            <span class="platform-name">Throb Academy</span>
        </div>
        <h1 class="title">منصة تعليمية افتراضية <span class="main-icon">✨</span></h1>
        <button class="theme-toggle" id="themeToggle" title="تبديل المظهر">🌙</button>
    </header>

    <main>
        <section class="upload-card" role="main" aria-label="واجهة رفع أو تسجيل المحاضرات">
            <h2>🎧 تسجيل أو رفع محاضرة</h2>

            <form method="post" enctype="multipart/form-data" asp-controller="Transcription" asp-action="UploadMedia" class="form-group" aria-label="نموذج رفع محاضرة">
                <label for="mediaFile" class="custom-file-input" data-bs-toggle="tooltip" data-bs-placement="top" title="رفع ملف صوتي أو فيديو">
                    انقر لاختيار ملف (MP3, WAV, MP4, M4A, WEBM)
                    <input type="file" name="mediaFile" id="mediaFile" accept="audio/*,video/*" required style="display:none;" />
                </label>
                <select name="method" class="custom-select form-control">
                    <option value="local">استخدام Whisper محلي</option>
                    <option value="api">استخدام Deepgram API</option>
                </select>
                <button type="submit" class="btn-custom btn-primary">📤 رفع المحاضرة</button>
            </form>

            <div id="loading">⏳ يرجى الانتظار، جاري المعالجة...</div>

            <hr />

            <div class="recording-controls">
                <button class="btn-custom btn-secondary" id="startRecording" title="بدء تسجيل فيديو">🎙️ تسجيل فيديو + صوت</button>
                <button class="btn-custom btn-secondary" id="startAudioRecording" title="تسجيل صوتي">🎤 تسجيل صوتي</button>
                <button class="btn-custom btn-danger" id="stopRecording" disabled>⏹️ إيقاف التسجيل</button>
            </div>

            <video id="preview" controls style="display:none; margin-top: 1rem;" class="w-100" aria-label="معاينة الفيديو"></video>
            <audio id="audioPreview" controls style="display:none; margin-top: 1rem;" class="w-100" aria-label="معاينة الصوت"></audio>

            <form id="recordForm" method="post" enctype="multipart/form-data" asp-controller="Transcription" asp-action="UploadMedia" class="form-group">
                <input type="file" id="recordedFile" name="mediaFile" hidden />
                <select name="method" class="custom-select form-control">
                    <option value="local">استخدام Whisper محلي</option>
                    <option value="api">استخدام Deepgram API</option>
                </select>
                <button type="submit" class="btn-custom btn-primary" id="uploadRecorded" disabled>📤 رفع التسجيل</button>
            </form>
        </section>
    </main>

    <footer>
        جميع الحقوق محفوظة &copy; @DateTime.Now.Year - منصة Throb Academy
    </footer>

    <a href="@Url.Action("QuestionBank", "Transcription")" class="btn btn-lg position-fixed bottom-0 end-0 m-3 fixed-bottom-btn">📚 عرض بنك الأسئلة</a>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdlZxGxvAagm" crossorigin="anonymous"></script>
    @* 🟢 ربط ملف JavaScript الخارجي *@
    <script src="~/js/upload-media-script.js" asp-append-version="true"></script>
</body>
