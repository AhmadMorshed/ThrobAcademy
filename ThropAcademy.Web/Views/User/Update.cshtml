@model ApplicationUser
@{
    ViewData["Title"] = "تعديل المستخدم";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}

@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/User/Update.css" asp-append-version="true" />

@* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">


<div class="update-user-page d-flex align-items-center justify-content-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <h1 class="page-title mb-4 text-center"><i class="fas fa-user-edit me-2"></i> @ViewData["Title"]</h1>

                <div class="card shadow-lg update-card">

                    <div class="card-header text-white text-center card-header-gradient">
                        <h4 class="mb-0 fw-bold">User Information</h4>
                    </div>

                    <div class="card-body p-4">

                        <form asp-action="Update" asp-controller="User" method="post">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="EmailConfirmed" />
                            <input type="hidden" asp-for="SecurityStamp" />

                            <div class="form-group mb-3">
                                <label asp-for="UserName" class="form-label fw-semibold">اسم المستخدم:</label>
                                <input asp-for="UserName" class="form-control form-control-modern rounded-pill" />
                                <span asp-validation-for="UserName" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label fw-semibold">البريد الإلكتروني:</label>
                                <input asp-for="Email" type="email" class="form-control form-control-modern rounded-pill" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="row">

                                <div class="col-md-6 form-group mb-3">
                                    <label for="NewPassword" class="form-label fw-semibold">كلمة المرور الجديدة:</label>
                                    <input type="password" name="NewPassword" class="form-control form-control-modern rounded-pill" placeholder="اترك فارغاً لعدم التغيير" />
                                </div>

                                <div class="col-md-6 form-group mb-3">
                                    <label for="LockoutEnabled" class="form-label fw-semibold">حالة القفل:</label>
                                    <div class="form-check form-switch mt-2">
                                        <input class="form-check-input" type="checkbox" id="LockoutEnabled" asp-for="LockoutEnabled" style="transform: scale(1.5);" />
                                        <label class="form-check-label" for="LockoutEnabled" style="padding-top: 3px;">
                                            تمكين القفل
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between mt-4">
                                <button type="submit" class="btn btn-action-main">
                                    <i class="fas fa-save me-2"></i> حفظ التحديثات
                                </button>
                                <a asp-action="Index" class="btn btn-action-secondary">
                                    <i class="fas fa-arrow-alt-circle-left me-2"></i> العودة للقائمة
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}