@model ApplicationUser
@{
    ViewData["Title"] = "تفاصيل المستخدم";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}

@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/User/Details.css" asp-append-version="true" />

@* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">

<div class="user-details-page d-flex align-items-center justify-content-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <h1 class="page-title mb-4 text-center"><i class="fas fa-user-circle me-2"></i> @ViewData["Title"]</h1>

                <div class="card detail-card shadow-lg">

                    <div class="card-header text-center header-gradient">
                        <h4 class="mb-0 fw-bold">User Information</h4>
                    </div>

                    <div class="card-body p-4">

                        <dl class="row detail-list">

                            <dt class="col-sm-4"><i class="fas fa-fingerprint me-2"></i> ID:</dt>
                            <dd class="col-sm-8 detail-value text-muted">@Model.Id</dd>

                            <hr class="my-2 detail-divider" />

                            <dt class="col-sm-4"><i class="fas fa-user me-2"></i> اسم المستخدم:</dt>
                            <dd class="col-sm-8 detail-value fw-bold">@Model.UserName</dd>

                            <hr class="my-2 detail-divider" />

                            <dt class="col-sm-4"><i class="fas fa-envelope me-2"></i> البريد الإلكتروني:</dt>
                            <dd class="col-sm-8 detail-value">@Model.Email</dd>

                            <hr class="my-2 detail-divider" />

                            <dt class="col-sm-4"><i class="fas fa-signal me-2"></i> حالة الحساب:</dt>
                            <dd class="col-sm-8 detail-value">
                                @if (Model.LockoutEnabled)
                                {
                                    <span class="badge status-badge inactive">مقفل</span>
                                }
                                else
                                {
                                    <span class="badge status-badge active">نشط</span>
                                }
                            </dd>

                        </dl>
                    </div>

                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-3 pb-4">
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-action-main">
                            <i class="fas fa-edit me-2"></i> تعديل المستخدم
                        </a>
                        <a asp-action="Index" class="btn btn-action-secondary">
                            <i class="fas fa-arrow-alt-circle-left me-2"></i> العودة للقائمة
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>