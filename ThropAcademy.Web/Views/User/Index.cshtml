@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "إدارة جميع المستخدمين";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}

@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/User/Index.css" asp-append-version="true" />

@* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">


<div class="container py-5">

    <h1 class="page-title mb-4 text-center"><i class="fas fa-users-cog me-2"></i> @ViewData["Title"]</h1>

    <form class="my-3 search-form-container" asp-action="Index" asp-controller="User">
        <div class="input-group">
            <input placeholder="البحث بالبريد الإلكتروني..." name="searchInp" class="form-control search-input" />
            <button type="submit" class="btn btn-search-icon">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </form>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive user-management-table shadow-sm">
            <table class="table table-striped table-hover user-table">
                <thead>
                    <tr>
                        <th class="col-id">ID</th>
                        <th><i class="fas fa-user-circle me-1"></i> اسم المستخدم</th>
                        <th><i class="fas fa-envelope me-1"></i> البريد الإلكتروني</th>
                        <th><i class="fas fa-signal me-1"></i> حالة الحساب</th>
                        <th colspan="3" class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="col-id">@item.Id</td>
                            <td class="col-name fw-semibold">@item.UserName</td>
                            <td>@item.Email</td>
                            <td class="status-column">
                                @* يفترض أن لديك خاصية منطقية (Boolean) مثل IsActive لتحديد حالة المستخدم *@
                                <span class="status-badge @(item.IsActive ? "active" : "inactive")">
                                    <i class="fas fa-circle me-1"></i> @(item.IsActive ? "نشط" : "غير نشط")
                                </span>
                            </td>

                            <td class="action-button">
                                <a href="@Url.Action("Details", "User", new { id = item.Id })" class="btn btn-sm btn-details" title="التفاصيل">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td class="action-button">
                                <a href="@Url.Action("Update", "User", new { id = item.Id })" class="btn btn-sm btn-update" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="action-button">
                                <form asp-action="Delete" method="post" onsubmit="return confirm('هل أنت متأكد من حذف هذا المستخدم؟');">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-delete" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="mt-5 alert alert-info alert-empty-users">
            <i class="fas fa-info-circle me-2"></i> <h3>لم يتم العثور على أي مستخدمين.</h3>
        </div>
    }
</div>