@model Throb.Data.Entities.Course
@{
    ViewData["Title"] = "تفاصيل الكورس";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties

    // حساب مدة الكورس بالأيام
    var duration = (Model.EndDate - Model.StartDate).Days;
}


@* ⚠️ ملاحظة: يمكن دمج Font-Awesome في ملف _Layout.cshtml لتحميلها مرة واحدة لكل الصفحات. *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container py-5">
    <h1 class="page-title mb-4 text-center">تفاصيل الكورس <i class="fas fa-book-reader ms-2"></i></h1>

    <div class="card course-detail-card shadow-lg mx-auto">
        <div class="card-header text-center header-gradient">
            <h2 class="mb-0 fw-bold">@Model.Name</h2>
            <p class="mb-0 small text-white-50">#ID: @Model.Id</p>
        </div>

        <div class="card-body p-4">

            <dl class="row detail-list">
                <dt class="col-sm-4"><i class="fas fa-info-circle me-2"></i> الوصف:</dt>
                <dd class="col-sm-8 detail-value">@Model.Description</dd>

                <hr class="my-2 detail-divider" />

                <dt class="col-sm-4"><i class="fas fa-dollar-sign me-2"></i> السعر:</dt>
                <dd class="col-sm-8 detail-value price-value fw-bold">@Model.CoursePrice.ToString("C")</dd>

                <hr class="my-2 detail-divider" />

                <dt class="col-sm-4"><i class="fas fa-calendar-alt me-2"></i> تاريخ البدء:</dt>
                <dd class="col-sm-8 detail-value">@Model.StartDate.ToString("dd MMMM yyyy")</dd>

                <dt class="col-sm-4"><i class="fas fa-calendar-check me-2"></i> تاريخ الانتهاء:</dt>
                <dd class="col-sm-8 detail-value">@Model.EndDate.ToString("dd MMMM yyyy")</dd>

                <hr class="my-2 detail-divider" />

                <dt class="col-sm-4"><i class="fas fa-stopwatch me-2"></i> المدة الكلية:</dt>
                <dd class="col-sm-8 detail-value fw-bold duration-value">
                    @duration يوماً
                    <span class="small text-muted">(~ @(Math.Round(duration / 30.0, 1)) شهور)</span>
                </dd>

                <hr class="my-2 detail-divider" />

                <dt class="col-sm-4"><i class="fas fa-history me-2"></i> تاريخ الإنشاء:</dt>
                <dd class="col-sm-8 detail-value small">@Model.CreatedAt.ToString("yyyy-MM-dd | HH:mm:ss")</dd>

            </dl>
        </div>

        <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-3 pb-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action-main">
                <i class="fas fa-edit me-2"></i> تعديل الكورس
            </a>
            <a asp-action="Index" class="btn btn-action-secondary">
                <i class="fas fa-list me-2"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>
@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/Course/Details.css" />