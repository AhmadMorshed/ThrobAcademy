@model Throb.Data.Entities.Course

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<br />
<br />
<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input type="text" asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="StartDate"></label>
        <input type="text" asp-for="StartDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="EndDate"></label>
        <input type="text" asp-for="EndDate" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="CoursePrice"></label>
        <input type="text" asp-for="CoursePrice" class="form-control" readonly />
    </div>

    <!-- عرض الحقول الجديدة في التفاصيل -->
    <div class="form-group">
        <label class="col-form-label" asp-for="CreatedAt"></label>
        <input type="text" asp-for="CreatedAt" value="@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")" class="form-control" readonly />
    </div>



    <!-- حساب مدة الكورس (من StartDate إلى EndDate) -->
    <div class="form-group">
        <label class="col-form-label">Course Duration (Days)</label>
        <!-- حساب الفرق بين StartDate و EndDate وعرضه في عدد الأيام -->
        <input type="text" value="@(Model.EndDate - Model.StartDate).Days" class="form-control" readonly />
    </div>

    <input type="submit" value="Edit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
