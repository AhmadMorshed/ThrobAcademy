@model IEnumerable<Course>
@{
    ViewData["Title"] = "Courses List";
}

<a asp-controller="Course" asp-action="Create" class="btn btn-primary mb-3">Create New Course</a>

@if (Model.Any())
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.Id)</th>
                <th>@Html.DisplayNameFor(c => c.Name)</th>
                <th>@Html.DisplayNameFor(c => c.Description)</th>
                <th>@Html.DisplayNameFor(c => c.StartDate)</th>
                <th>@Html.DisplayNameFor(c => c.EndDate)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.Id</td>
                    <td>@course.Name</td>
                    <td>@course.Description</td>
                    <td>@course.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@course.EndDate.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@course.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i> Update
                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?');">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There are no courses available.</h3>
    </div>
}
