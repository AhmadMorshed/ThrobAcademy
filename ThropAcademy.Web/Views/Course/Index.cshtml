@model IEnumerable<Course>

@{
    ViewData["Title"] = "إدارة الدورات التدريبية";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}


@* ⚠️ ملاحظة: يمكن دمج Font-Awesome في ملف _Layout.cshtml لتحميلها مرة واحدة لكل الصفحات. *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="container-fluid my-5">

    <h1 class="page-header-title mb-4">@ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-controller="Course" asp-action="Create" class="btn btn-create-course">
            <i class="fas fa-plus-circle me-2"></i> إنشاء دورة جديدة
        </a>
        <p class="text-muted small mb-0">Total Courses: @Model.Count()</p>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive course-table-card">
            <table class="table table-striped table-hover course-table">
                <thead>
                    <tr>
                        <th class="col-id">#</th>
                        <th>@Html.DisplayNameFor(c => c.Name)</th>
                        <th>@Html.DisplayNameFor(c => c.Description)</th>
                        <th>Status</th>
                        <th>Price</th>
                        <th class="text-center">Students</th>
                        <th class="col-actions text-center" colspan="3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int serial = 1;
                    }
                    @foreach (var course in Model)
                    {
                        var isActive = course.EndDate >= DateTime.Today;
                        var statusClass = isActive ? "status-active" : "status-finished";
                        var statusText = isActive ? "Active" : "Finished";

                        <tr>
                            <td>@serial</td>
                            <td class="course-name">@course.Name</td>
                            <td class="course-description">@(course.Description != null && course.Description.Length > 50 ? course.Description.Substring(0, 50) + "..." : course.Description)</td>
                            <td>
                                <span class="badge @statusClass">@statusText</span>
                            </td>
                            <td>@course.CoursePrice.ToString("C")</td>
                            <td class="text-center">@course.StudentCount</td>

                            <td class="action-cell">
                                <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-action btn-details">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td class="action-cell">
                                <a asp-action="Update" asp-route-id="@course.Id" class="btn btn-action btn-update">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="action-cell">
                                <a asp-action="Delete" asp-route-id="@course.Id" class="btn btn-action btn-delete" onclick="return confirm('Are you sure you want to delete this course?');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        serial++;
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="mt-5 alert alert-info empty-state-alert">
            <h3 class="fw-bold"><i class="fas fa-info-circle me-2"></i> لا توجد دورات متاحة حاليًا.</h3>
            <p>ابدأ بإنشاء أول دورة تدريبية لك.</p>
        </div>
    }
</div>

@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/Course/Index.css" />