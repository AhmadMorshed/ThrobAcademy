@model Throb.Data.Entities.Course
@{
    ViewData["Title"] = "تعديل الكورس";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}

@* 🟢 ربط ملف CSS الخارجي *@

@* ⚠️ ملاحظة: يمكن دمج Font-Awesome و Cairo Font في ملف _Layout.cshtml لتحميلها مرة واحدة لكل الصفحات. *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">


<div class="update-page d-flex align-items-center justify-content-center">
    <div class="update-card shadow-lg p-4 rounded-3">

        <h1 class="page-title text-center mb-4"><i class="fas fa-edit me-2"></i> @ViewData["Title"]</h1>

        @Html.ValidationSummary(true, "Error", new { @class = "alert alert-danger" })

        <form asp-action="Update" method="post" asp-controller="Course">

            @* حقل مخفي لحفظ Id الكورس أثناء التعديل *@
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">اسم الكورس</label>
                    <input asp-for="Name" class="form-control form-control-modern rounded-pill" placeholder="اسم الكورس" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-group mb-3">
                    <label asp-for="Description" class="form-label fw-semibold">الوصف المختصر</label>
                    <input asp-for="Description" class="form-control form-control-modern rounded-pill" placeholder="وصف الكورس" />
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="StartDate" class="form-label fw-semibold">تاريخ البدء</label>
                    <input asp-for="StartDate" type="date" class="form-control form-control-modern rounded-pill" />
                    <span asp-validation-for="StartDate" class="text-danger small"></span>
                </div>

                <div class="col-md-6 form-group mb-3">
                    <label asp-for="EndDate" class="form-label fw-semibold">تاريخ الانتهاء</label>
                    <input asp-for="EndDate" type="date" class="form-control form-control-modern rounded-pill" />
                    <span asp-validation-for="EndDate" class="text-danger small"></span>
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="CoursePrice" class="form-label fw-semibold">سعر الكورس</label>
                <input asp-for="CoursePrice" type="number" step="0.01" class="form-control form-control-modern rounded-pill" placeholder="السعر" />
                <span asp-validation-for="CoursePrice" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-action-main">
                    <i class="fas fa-save me-2"></i> حفظ التعديلات
                </button>
                <a asp-action="Index" class="btn btn-action-secondary">
                    <i class="fas fa-arrow-alt-circle-left me-2"></i> العودة للقائمة
                </a>
            </div>
        </form>
    </div>
</div>

<link rel="stylesheet" href="~/css/Course/Update.css" />

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}