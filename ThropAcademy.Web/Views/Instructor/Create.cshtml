    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
        <br />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
        <br />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
        <br />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="InstructorCourses">Select Courses</label>
        <select asp-for="InstructorCourses" class="form-control" asp-items="ViewBag.Courses" multiple="multiple">
        </select>
        <span asp-validation-for="InstructorCourses" class="text-danger"></span>
        <br />
    </div>


    @Html.ValidationSummary(true, "StudentErrors", "Error while Adding Student");
    <br />

    <input type="submit" value="Create" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
