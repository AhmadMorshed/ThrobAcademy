@model Throb.Data.Entities.Instructor
@{
    ViewData["Title"] = "بيانات المدرب";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}


@* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">

<div class="instructor-details-page d-flex align-items-center justify-content-center py-5">

    <div class="card detail-card shadow-lg mx-auto">
        <div class="card-header text-center header-gradient">
            <i class="fas fa-chalkboard-teacher detail-icon"></i>
            <h2 class="mb-0 fw-bold">@Model.Name</h2>
            <p class="mb-0 small text-white-50">#ID: @Model.Id</p>
        </div>

        <div class="card-body p-4">

            <dl class="row detail-list">

                <dt class="col-sm-4"><i class="fas fa-user me-2"></i> الاسم الكامل:</dt>
                <dd class="col-sm-8 detail-value">@Model.Name</dd>

                <hr class="my-2 detail-divider" />

                <dt class="col-sm-4"><i class="fas fa-envelope me-2"></i> البريد الإلكتروني:</dt>
                <dd class="col-sm-8 detail-value">@Model.Email</dd>

                <hr class="my-2 detail-divider" />

                <dt class="col-sm-4"><i class="fas fa-key me-2"></i> كلمة المرور:</dt>
                <dd class="col-sm-8 detail-value password-hidden">
                    <span class="password-placeholder">
                        <i class="fas fa-lock me-2"></i> *****************
                    </span>
                </dd>

                <hr class="my-2 detail-divider" />

                @* يجب التأكد من تحميل InstructorCourses في الكنترولر *@
                <dt class="col-sm-4"><i class="fas fa-cubes me-2"></i> الكورسات النشطة:</dt>
                <dd class="col-sm-8 detail-value course-list-value">
                    @if (Model.InstructorCourses != null && Model.InstructorCourses.Any())
                    {
                        @string.Join(", ", Model.InstructorCourses.Select(ic => ic.Course.Name))
                    }
                    else
                    {
                        <span>لا توجد كورسات مسجلة حالياً.</span>
                    }
                </dd>

            </dl>
        </div>

        <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-3 pb-4">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-action-main">
                <i class="fas fa-edit me-2"></i> تعديل البيانات
            </a>
            <a asp-action="Index" class="btn btn-action-secondary">
                <i class="fas fa-arrow-alt-circle-left me-2"></i> العودة للقائمة
            </a>
        </div>
    </div>
</div>
@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/Instructor/Detials.css" />

@section Scripts {
    @* يمكن إضافة أي سكريبتات خاصة بهذه الصفحة هنا *@
}