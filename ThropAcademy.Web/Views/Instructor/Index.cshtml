@model IEnumerable<Throb.Data.Entities.Instructor>

@{
    ViewData["Title"] = "إدارة المدربين";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}


@* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">

<div class="container py-5">

    <h1 class="page-title mb-4 text-center"><i class="fas fa-chalkboard-teacher me-2"></i> @ViewData["Title"]</h1>

    <div class="d-flex justify-content-between align-items-center mb-4 management-header">
        <a asp-controller="Instructor" asp-action="Create" class="btn btn-create-action">
            <i class="fas fa-user-plus me-2"></i> إضافة مدرب جديد
        </a>

        <form method="get" asp-action="Index" class="form-inline search-form">
            <div class="input-group">
                <input type="text" class="form-control search-input" name="searchInp" placeholder="البحث بالاسم..." value="" />
                <button type="submit" class="btn btn-search-icon">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </form>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive instructor-management-table shadow-sm">
            <table class="table table-striped table-hover instructor-table">
                <thead>
                    <tr>
                        <th class="col-id">ID</th>
                        <th><i class="fas fa-user me-1"></i> الاسم</th>
                        <th><i class="fas fa-envelope me-1"></i> البريد الإلكتروني</th>
                        <th><i class="fas fa-lock me-1"></i> كلمة المرور</th>
                        <th class="col-courses"><i class="fas fa-cube me-1"></i> الكورسات المسجل بها</th>
                        <th class="text-center" colspan="3">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Instructor in Model)
                    {
                        <tr>
                            <td class="col-id">@Instructor.Id</td>
                            <td class="col-name fw-semibold">@Instructor.Name</td>
                            <td>@Instructor.Email</td>
                            <td class="password-hidden">********</td>
                            <td class="col-courses">
                                @if (Instructor.InstructorCourses != null && Instructor.InstructorCourses.Any())
                                {
                                    <div class="d-flex flex-wrap">
                                        @foreach (var sc in Instructor.InstructorCourses)
                                        {
                                            <span class="course-badge me-1 mb-1">@sc.Course.Name</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">لا يوجد</span>
                                }
                            </td>

                            <td class="action-button">
                                <a asp-action="Details" asp-route-id="@Instructor.Id" class="btn btn-sm btn-details" title="التفاصيل">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </td>
                            <td class="action-button">
                                <a asp-action="Update" asp-route-id="@Instructor.Id" class="btn btn-sm btn-update" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                            <td class="action-button">
                                <a asp-action="Delete" asp-route-id="@Instructor.Id" class="btn btn-sm btn-delete" title="حذف" onclick="return confirm('هل أنت متأكد من حذف هذا المدرب؟');">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="mt-5 alert alert-info alert-empty">
            <i class="fas fa-info-circle me-2"></i> <h3>لا يوجد مدربون مسجلون حالياً.</h3>
        </div>
    }
</div>
@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/Instructor/Index.css"/>
