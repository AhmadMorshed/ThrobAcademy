@model Student
@{
    ViewData["Title"] = "Student Details";
}

<h1>Student Details</h1>

<br />
<br />
<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input type="text" asp-for="Id" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input type="text" asp-for="Name" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Email"></label>
        <input type="text" asp-for="Email" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Password"></label>
        <input type="text" placeholder="********"  class="form-control" readonly />
    </div>
    <br />
    <br />
    <input type="submit" value="Update" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back To List</a>
</form>
