@model IEnumerable<Throb.Data.Entities.Course>

@{
    ViewData["Title"] = "Drive Sessions - Courses";
}

<h1 class="page-title">@ViewData["Title"]</h1>

<!-- عرض قائمة الكورسات -->
<div class="course-list">
    @foreach (var course in Model)
    {
        <div class="course-item">
            <h3>@course.Name</h3>
            <p>@course.Description</p>
            <!-- رابط إلى Google Drive مع التأثيرات -->
            <a href="https://drive.google.com/drive/folders/1bgTzORW-cu-1CoatlbPf75uvmrk649EO" class="btn btn-primary" target="_blank">View Drive</a>
        </div>
    }
</div>

<!-- إضافة بعض التنسيقات لتصميم الكورسات -->
<style>
    body {
        font-family: 'Roboto', sans-serif;
        background-color: #f4f6f9;
        margin: 0;
        padding: 0;
    }

    .page-title {
        text-align: center;
        font-size: 36px;
        color: #003366;
        margin-top: 40px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .course-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 30px;
        margin-top: 40px;
        padding: 0 20px;
    }

    .course-item {
        background-color: #ffffff;
        border-radius: 10px;
        padding: 20px;
        text-align: center;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
    }

        .course-item:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
        }

        .course-item h3 {
            font-size: 24px;
            color: #003366;
            margin-bottom: 15px;
            font-weight: bold;
        }

        .course-item p {
            font-size: 16px;
            color: #555;
            margin-bottom: 20px;
            line-height: 1.5;
        }

    .btn-primary {
        background-color: #0066cc;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        text-decoration: none;
        border-radius: 25px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #005bb5;
            transform: translateY(-3px);
        }

        /* تأثير التمرير للأزرار */
        .btn-primary:focus {
            outline: none;
            box-shadow: 0 0 10px rgba(0, 102, 204, 0.7);
        }

    /* التأثيرات الإضافية للمحتوى */
    .course-item {
        background-color: #fdfdfd;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.05);
        border-left: 4px solid #0066cc;
    }
</style>

















