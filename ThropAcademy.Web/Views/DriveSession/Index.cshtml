 @model IEnumerable<DriveSession>
@{

    ViewData["Title"] = "Index";
}
@if (Model.Any())

{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(c => c.Id)</th>
                <th>@Html.DisplayNameFor(c => c.Content_Type)</th>
                <th>@Html.DisplayNameFor(c => c.courses)</th>
                <th>@Html.DisplayNameFor(c => c.Title)</th>
                <th>@Html.DisplayNameFor(c => c.UploadDate)</th>


                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>

            </tr>

        </thead>
        <tbody>
            @foreach (var driveSession in Model)
            {
                <tr>
                    <td>@driveSession.Id</td>
                    <td>@driveSession.Content_Type</td>
                    <td>@driveSession.Title</td>
                    <td>@driveSession.UploadDate</td>
                    <td>@driveSession.courses</td>


                    <td>
                        <a asp-action="Details" asp-route-id="instructor.Id" class="btn btn-warning">
                            <i class="fas fa-eye"></i>Details

                        </a>
                    </td>
                    <td>
                        <a asp-action="Update" asp-route-id="instructor.Id" class="btn btn-success">
                            <i class="fas fa-edit"></i>Update

                        </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="instructor.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete

                        </a>
                    </td>
                </tr>
            }


        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is on DriveSession</h3>
    </div>
}

