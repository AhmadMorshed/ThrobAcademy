@model IEnumerable<Throb.Data.Entities.Course>

@{
    ViewData["Title"] = "Drive Sessions - Courses";
}

<h1>@ViewData["Title"]</h1>

<!-- عرض قائمة الكورسات -->
<div class="course-list">
    @foreach (var course in Model)
    {
        <div class="course-item">
            <h3>@course.Name</h3>
            <p>@course.Description</p>
            <!-- هنا يمكن إضافة رابط أو تفاصيل أخرى إذا كنت بحاجة إليها -->
            <a href="#" class="btn btn-primary">View Details</a>
        </div>
    }
</div>

<!-- إضافة بعض التنسيقات لتصميم الكورسات -->
<style>
    .course-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .course-item {
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .course-item h3 {
            font-size: 24px;
            color: #003366;
        }

        .course-item p {
            color: #555;
        }

        .course-item .btn-primary {
            background-color: #0066cc;
            border: none;
            transition: background-color 0.3s;
        }

            .course-item .btn-primary:hover {
                background-color: #005bb5;
            }
</style>
