@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "All Roles";
}

<h1 class="text-center mb-4">All Roles</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg border-light">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Roles Management</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a asp-action="Create" class="btn btn-success btn-lg">Create New Role</a>
                    </div>

                    @if (Model?.Count() > 0)
                    {
                        <table class="table table-striped table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>@Html.DisplayNameFor(M => M.Id)</th>
                                    <th>@Html.DisplayNameFor(M => M.Name)</th>
                                    <th>Details</th>
                                    <th>Update</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                                        </td>
                                        <td>
                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                                        </td>
                                        <td>
                                            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <h5>No Roles Found!</h5>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
