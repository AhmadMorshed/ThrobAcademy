@model List<UserInRoleViewModel>
@{
    ViewData["Title"] = "Add or Remove Users";
    var RoleId = ViewBag.RoleId;
}

<h2>@ViewData["Title"]</h2>

<form class="my-3" asp-action="AddOrRemoveUsers" asp-route-roleId="@RoleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-check mb-3">
            <input asp-for="@Model[i].IsSelected" class="form-check-input" type="checkbox" id="user_@Model[i].UserId" />
            <label class="form-check-label" for="user_@Model[i].UserId">
                @Model[i].UserName
            </label>
        </div>

        <!-- Hidden inputs for userId and UserName (not visible, but they are submitted) -->
        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />
    }

    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success" />
        <a asp-action="Update" asp-controller="Roles" asp-route-id="@RoleId" class="btn btn-light ms-2">Cancel</a>
    </div>
</form>
