@model IdentityRole



<h1 class="text-center mb-4">Create Role</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-light">
                <div class="card-header bg-primary text-white text-center">
                    <h4>Create a New Role</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" asp-controller="Role">
                        <!-- Role Name Field -->
                        <div class="form-group">
                            <label for="Name">Role Name</label>
                            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
                        </div>

                        <!-- Submit Button -->
                        <div class="form-group row justify-content-center mt-4">
                            <div class="col-auto">
                                <input type="submit" value="Create" class="btn btn-success btn-lg" />
                            </div>
                        </div>

                        <!-- Back Button -->
                        <div class="form-group row justify-content-center">
                            <div class="col-auto">
                                <a asp-action="Index" class="btn btn-light btn-lg">Back to List</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
