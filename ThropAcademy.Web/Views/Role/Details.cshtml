@model Microsoft.AspNetCore.Identity.IdentityRole
@{
    ViewData["Title"] = "تفاصيل الصلاحية";
    // ❌ تم حذف تعريف متغيرات الألوان هنا ونقلها إلى CSS Custom Properties
}


@* ⚠️ ملاحظة: يمكنك دمج الروابط التالية في _Layout.cshtml *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
<link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700;800&display=swap" rel="stylesheet">

<div class="role-details-page d-flex align-items-center justify-content-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">

                <h1 class="page-title text-center mb-4"><i class="fas fa-user-tag me-2"></i> @ViewData["Title"]</h1>

                <div class="card detail-card shadow-lg">

                    <div class="card-header text-center header-gradient">
                        <h4 class="mb-0 fw-bold">Role Information</h4>
                    </div>

                    <div class="card-body p-4">

                        <dl class="row detail-list">

                            <dt class="col-sm-4"><i class="fas fa-fingerprint me-2"></i> ID:</dt>
                            <dd class="col-sm-8 detail-value text-muted">@Model.Id</dd>

                            <hr class="my-2 detail-divider" />

                            <dt class="col-sm-4"><i class="fas fa-id-badge me-2"></i> اسم الصلاحية:</dt>
                            <dd class="col-sm-8 detail-value role-name-value fw-bold">@Model.Name</dd>

                            <hr class="my-2 detail-divider" />

                            <dt class="col-sm-4"><i class="fas fa-user-tag me-2"></i> الاسم المعياري:</dt>
                            <dd class="col-sm-8 detail-value">@Model.NormalizedName</dd>

                        </dl>
                    </div>

                    <div class="card-footer bg-transparent border-0 d-flex justify-content-center gap-3 pb-4">
                        <a class="btn btn-action-main" asp-action="Update" asp-route-id="@Model.Id">
                            <i class="fas fa-edit me-2"></i> تعديل الصلاحية
                        </a>
                        <a class="btn btn-action-secondary" asp-action="Index">
                            <i class="fas fa-arrow-alt-circle-left me-2"></i> العودة للقائمة
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@* 🟢 ربط ملف CSS الخارجي *@
<link rel="stylesheet" href="~/css/Role/Details.css" />