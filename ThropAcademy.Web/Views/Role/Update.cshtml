@model RoleUpdateViewModel
@{
    ViewData["Title"] = "Edit Role";
}

<h1 class="text-center mb-4">Edit Role</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-light">
                <div class="card-header bg-warning text-white text-center">
                    <h4>Edit Role Information</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Update" asp-controller="Role" method="post">
                        <input hidden asp-for="Id" />

                        <div class="form-group">
                            <label asp-for="Name" class="font-weight-bold">Role Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter Role Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group row justify-content-center mt-4">
                            <div class="col-auto">
                                <input type="submit" value="Save Changes" class="btn btn-success btn-lg" />
                            </div>
                        </div>

                        <div class="form-group row justify-content-center">
                            <div class="col-auto">
                                <a class="btn btn-light btn-lg" asp-action="Index">Back to List</a>
                            </div>
                            <div class="col-auto">
                                <a class="btn btn-light btn-lg" asp-action="AddOrRemoveUsers" asp-controller="Role" asp-route-roleId="@Model.Id">AddOrRemove</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
